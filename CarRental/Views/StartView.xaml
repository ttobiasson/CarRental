<UserControl x:Class="CarRental.Views.StartView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CarRental.Views"
             xmlns:viewModel="clr-namespace:CarRental.ViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <UserControl.Resources>
        <viewModel:BookingViewModel x:Key="bvm"></viewModel:BookingViewModel>
    </UserControl.Resources>
    <Grid>
        <Button Name ="rentVehicle" Content="Rent Vehicle" FontSize="20" HorizontalAlignment="Left" Margin="164,226,0,0" VerticalAlignment="Top" Width="135" Height="59"/>
        <Button Command="{Binding Source={StaticResource bvm}, Path=RentButtonCommand}" Name ="returnVehicle" Content="Return Vehicle" FontSize="20" HorizontalAlignment="Left" Margin="506,226,0,0" VerticalAlignment="Top" Width="135" Height="59"/>
        <TextBlock Text="Welcome to Toms Vehicle Rental System" FontSize="20" HorizontalAlignment="Left" Margin="221,45,0,0" VerticalAlignment="Top" Height="68" Width="365"/>
    </Grid>
</UserControl>
